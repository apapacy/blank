CREATE TEMPORARY TABLE __temp__post AS SELECT id, name, email, phone, product, price, dateEmail, place, transport, payMethod, payProperty, datePayment, isClosed, dateClosing, memo FROM post;
DROP TABLE post;
CREATE TABLE post (id INTEGER NOT NULL, name VARCHAR(64) NOT NULL COLLATE BINARY, email VARCHAR(64) NOT NULL COLLATE BINARY, phone VARCHAR(64) NOT NULL COLLATE BINARY, product VARCHAR(264) NOT NULL COLLATE BINARY, price NUMERIC(20, 2) NOT NULL, dateEmail DATETIME NOT NULL, place VARCHAR(264) NOT NULL COLLATE BINARY, transport VARCHAR(264) NOT NULL COLLATE BINARY, payMethod VARCHAR(264) NOT NULL COLLATE BINARY, payProperty VARCHAR(264) DEFAULT NULL COLLATE BINARY, datePayment DATETIME DEFAULT NULL, isClosed BOOLEAN DEFAULT '0', dateClosing DATETIME DEFAULT NULL, memo CLOB DEFAULT NULL COLLATE BINARY, PRIMARY KEY(id));
INSERT INTO post (id, name, email, phone, product, price, dateEmail, place, transport, payMethod, payProperty, datePayment, isClosed, dateClosing, memo) SELECT id, name, email, phone, product, price, dateEmail, place, transport, payMethod, payProperty, datePayment, isClosed, dateClosing, memo FROM __temp__post;
DROP TABLE __temp__post;
CREATE INDEX post_payProperty ON post (payProperty);

